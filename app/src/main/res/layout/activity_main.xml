<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#E4A548"

    tools:context=".MainActivity">





    <TextView
        android:id="@+id/player_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:textColor="#03A9F4"
        android:background="#DDE1E3"
        android:layout_marginLeft="140dp"
        android:text="PLAYER-1"
        android:textSize="30dp"></TextView>


    <Button
        android:id="@+id/btn_menu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="550dp"
        android:layout_marginLeft="130dp"
        android:background="#0A070E"
        android:text="Main Menu"
        android:tag="9"
        android:textColor="#03A9F4"
        android:textSize="30dp"></Button>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:paddingTop="170dp">
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="6dp"
            android:background="#37CD2D"
            android:tag="0"
            android:id="@+id/btn_1"
            android:textSize="60dp"></Button>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="6dp"
            android:background="#37CD2D"
            android:id="@+id/btn_2"
            android:tag="1"
            android:textSize="60dp"></Button>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="6dp"
            android:background="#37CD2D"
            android:id="@+id/btn_3"
            android:tag="2"
            android:textSize="60dp"></Button>
    </LinearLayout>
    <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:gravity="center"
    android:paddingTop="270dp">
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="6dp"
        android:id="@+id/btn_4"
        android:background="#37CD2D"
        android:tag="3"
        android:textSize="60dp"></Button>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="6dp"
        android:background="#37CD2D"
        android:id="@+id/btn_5"
        android:tag="4"
        android:textSize="60dp"></Button>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#37CD2D"
        android:layout_margin="6dp"
        android:id="@+id/btn_6"
        android:tag="5"
        android:textSize="60dp"></Button>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:paddingTop="370dp">
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="6dp"
        android:background="#37CD2D"
        android:id="@+id/btn_7"
        android:tag="6"
        android:textSize="60dp"></Button>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="6dp"
        android:background="#37CD2D"
        android:id="@+id/btn_8"
        android:tag="7"
        android:textSize="60dp"></Button>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#37CD2D"
        android:layout_margin="6dp"
        android:id="@+id/btn_9"
        android:tag="8"
        android:textSize="60dp"></Button></LinearLayout>
</RelativeLayout>